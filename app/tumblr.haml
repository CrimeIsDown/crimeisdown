/ @@master = templates/tumblr.tpl.html
/ @@block = content
.columns
  / <h1>{Title}</h1>
  /
    {block:Description}
    <p id="description">{Description}</p>
    {/block:Description}
  %section#posts.col-5-8
    {block:Posts}
    {block:Text}
    %article.post.text
      {block:Title}
      %header
        %h3
          %a{:href => "{Permalink}"} {Title}
      {/block:Title}
      {Body}
    {/block:Text}
    {block:Photo}
    %article.post.photo
      %header
        %h3 Photo
      %img{:alt => "{PhotoAlt}", :src => "{PhotoURL-500}"}/
      {block:Caption}
      .caption {Caption}
      {/block:Caption}
    {/block:Photo}
    {block:Panorama}
    %article.post.panorama
      %header
        %h3 Panorama
      {LinkOpenTag}
      %img{:alt => "{PhotoAlt}", :src => "{PhotoURL-Panorama}"}/
      {LinkCloseTag}
      {block:Caption}
      .caption {Caption}
      {/block:Caption}
    {/block:Panorama}
    {block:Photoset}
    %article.post.photoset
      %header
        %h3 Photoset
      {Photoset-500}
      {block:Caption}
      .caption {Caption}
      {/block:Caption}
    {/block:Photoset}
    {block:Quote}
    %article.post.quote
      %header
        %h3 Quote
      "{Quote}"
      {block:Source}
      .source {Source}
      {/block:Source}
    {/block:Quote}
    {block:Link}
    %article.post.link
      %header
        %h3
          %a.link{:href => "{URL}", :target => "{Target}"} {Name}
      {block:Description}
      .description {Description}
      {/block:Description}
    {/block:Link}
    {block:Chat}
    %article.post.chat
      {block:Title}
      %header
        %h3
          %a{:href => "{Permalink}"} {Title}
      {/block:Title}
      %ul.chat
        {block:Lines}
        %li{:class => "{Alt} user_{UserNumber}"}
          {block:Label}
          %span.label {Label}
          {/block:Label}{Line}
        {/block:Lines}
    {/block:Chat}
    {block:Video}
    %article.post.video
      %header
        %h3 Video
      {Video-500}
      {block:Caption}
      .caption {Caption}
      {/block:Caption}
    {/block:Video}
    {block:Audio}
    %article.post.audio
      %header
        %h3 Audio
      {AudioEmbed}
      {block:Caption}
      .caption {Caption}
      {/block:Caption}
    {/block:Audio}
    {/block:Posts}
    %p#footer
      {block:PreviousPage}
      %a{:href => "{PreviousPage}"} &#xAB; Previous
      {/block:PreviousPage}{block:NextPage}
      %a{:href => "{NextPage}"} Next &#xBB;
      {/block:NextPage}
      %a{:href => "/archive"} Archive
