!!!
%html.no-js
  %head
    %meta{:charset => "utf-8"}/
    %title {Title}
    {block:Description}
    %meta{:content => "{MetaDescription}", :name => "description"}/
    {/block:Description}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    / Favicon, touch icon
    %link{:href => "{Favicon}", :rel => "shortcut icon", :type => "image/x-icon"}/
    / RSS feed
    %link{:href => "{RSS}", :rel => "alternate", :type => "application/rss+xml"}/
    / Social media meta tags
    %meta{:content => "summary", :name => "twitter:card"}/
    %meta{:content => "@EricTendian", :name => "twitter:site"}/
    %meta{:content => "CrimeIsDown.com", :name => "twitter:title"}/
    %meta{:content => "{MetaDescription}", :name => "twitter:description"}/
    %meta{:content => "@EricTendian", :name => "twitter:creator"}/
    %meta{:content => "", :name => "twitter:image:src"}/
    %meta{:content => "CrimeIsDown.com", :property => "og:title"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "http://crimeisdown.com/", :property => "og:url"}/
    %meta{:content => "", :property => "og:image"}/
    %meta{:content => "{MetaDescription}", :property => "og:description"}/

    / build:css //crimeisdown.com/styles/vendor.css
    / bower:css
    %link{:href => "styles/vendor.css", :rel => "stylesheet"}/
    / endbower
    / endbuild

    / build:css //crimeisdown.com/styles/main.css
    %link{:href => "styles/main.css", :rel => "stylesheet"}/
    / endbuild

    / build:js //crimeisdown.com/scripts/vendor/modernizr.js
    %script{:src => "bower_components/modernizr/modernizr.js"}
    / endbuild

  %body
    /[if lt IE 10]
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    %header#site-header
      %nav#main-menu.navbar.navbar-inverse
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "/"} #CrimeIsDown.com Blog
          #navbar.collapse.navbar-collapse
            %ul#main-menu-items.nav.navbar-nav
              %li
                %a{:href => "http://crimeisdown.com/"}
                  %em Back to CrimeIsDown.com
              %li
                %a{:href => "/"} Blog Index
              {block:HasPages}
              {block:Pages}
              %li
                %a{:href => "{URL}"} {Label}
              {/block:Pages}
              {/block:HasPages}
              %li
                %a{:href => "/archive"} Archive

    %main#content.container
      / @@placeholder = content

    %footer#site-footer.container
      .row
        .col-md-5
          %p
            Copyright &#169; 2014 CrimeIsDown.com. All Rights Reserved.
        .col-md-7
          %form#donateform{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post", :target => "_top"}
            %input{:name => "cmd", :type => "hidden", :value => "_s-xclick"}/
            %input{:name => "encrypted", :type => "hidden", :value => "-----BEGIN PKCS7----------END PKCS7-----\n                        "}/
            %img{:alt => "", :border => "0", :height => "1", :src => "https://www.paypalobjects.com/en_US/i/scr/pixel.gif", :width => "1"}/
            %p
              %a{:href => "about.html"} About CrimeIsDown.com
              |
              %a{:href => "https://twitter.com/EricTendian"} Follow on Twitter
              |
              %a{:href => "https://www.facebook.com/Tendian.io"} Like on Facebook
              |
              %input#donatebutton{:alt => "PayPal - The safer, easier way to pay online!", :border => "0", :name => "submit", :src => "https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif", :type => "image"}/

    :javascript
      (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
      function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
      e=o.createElement(i);r=o.getElementsByTagName(i)[0];
      e.src='//www.google-analytics.com/analytics.js';
      r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
      ga('create', 'UA-30674963-11', 'auto');ga('require', 'displayfeatures');ga('send', 'pageview');

    / build:js //crimeisdown.com/scripts/vendor.js
    / bower:js
    %script{:src => "bower_components/jquery/dist/jquery.js"}
    / endbower
    / endbuild

    / build:js //crimeisdown.com/scripts/main.js
    %script{:src => "scripts/main.js"}
    / endbuild

    {block:PermalinkPage}
    {block:Twitter}
    %script{:src => "/tweets.js", :type => "text/javascript"}
    {/block:Twitter}
    {/block:PermalinkPage}
